 :provided   (erc erc-autoaway erc-backend erc-button erc-capab erc-compat erc-dcc erc-ezbounce erc-fill erc-goodies erc-hecomplete erc-ibuffer erc-identd erc-imenu erc-join erc-lang erc-log erc-match erc-menu erc-netsplit erc-networks erc-notify erc-page erc-pcomplete erc-replace erc-ring erc-services erc-sound erc-speedbar erc-spelling erc-stamp erc-track erc-truncate erc-xdcc)
 :required   ((("apel" poe)
